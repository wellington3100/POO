import mariadb

class MiBaseDatos:
    def __init__(self):
        self.conexion = None
    
    def conectar(self):
        try:
            # Conexi贸n a la base de datos MariaDB
            self.conexion = mariadb.connect( 
                user = 'root',           
                password = '',                               
                host = 'localhost',
                port = 3306,
                database = 'py_cursos'
            )
        except mariadb.Error as e:
            print(f"Error de conexi贸n: {e}")
            self.conexion = None
    
    def cerrar(self):
        if self.conexion:
            self.conexion.close()
            self.conexion = None
            # messagebox.showinfo("Conexi贸n Cerrada", "La conexi贸n a la base de datos se ha cerrado correctamente.")
